#   Automatically generated grammar

lang       = "java"
getsym     = "chr = buff[l++];if( l == end ) fillb()"
positioning= "%%positioning%%"
lexemend   = "%%lexemend%%"
class      = "MParser"
lexer      = "MLexer"
package	   = "com.mypackage"
breaks     = "off"

# Vocabulary

Lid(String):  /[a-zA-Z_][a-zA-Z_0-9]*/	{ $lexem = new String(token,0,len); break; }
Lint:		  /[0-9]+/
_skip:        /\/\/.*/
_skip:        /[\t\r\n ]+/    { return false; }
'(':		  /\(/
')':		  /\)/
'*':		  /*/
'+':		  /+/
'-':		  /-/
'/':		  /\//
'=':		  /=/
';':		  /;/

error:

# Grammar

%left '-' '+' ;
%left '*' '/' ;

input ::= 
	statements ;

statements ::= 
	statements statement | statement ;


statement ::=
	Lid '=' expr ';' { myprint("good"); break; }
  | Lid '=' error ';' { myprint("error in expression"); break; } ;

expr ::=
	expr '*' expr 
  | expr '/' expr
  | expr '+' expr
  | expr '-' expr
  | '(' expr ')'
  | Lint 
  | Lid
;
