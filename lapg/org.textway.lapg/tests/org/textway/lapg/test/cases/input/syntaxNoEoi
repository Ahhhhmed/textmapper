# lapg syntax file

lang = "java"
prefix = "AA"


identifier(String): /[a-zA-Z_][a-zA-Z_0-9]*/ -1 { $lexem = current(); break; }
_skip:          /[\n\t\r ]+/                   	{ return false; }

Lclass: /class/
'{': /\{/
'}': /\}/


# grammar


%input classdef_NoEoi no-eoi;

classdef_NoEoi ::=
	classdef ;

classdef ::=
	Lclass identifier '{' classdeflistopt '}' ;

classdeflist ::=
	classdef
  | classdeflist classdef
;

%%