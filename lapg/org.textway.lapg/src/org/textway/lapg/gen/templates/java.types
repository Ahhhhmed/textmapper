##

class Global {
	Context* context[1];
}

class Context {
	common.Grammar syntax[1];
	common.Lexer lex[1]; 
	common.Parser parser[1];
	Options opts[1];
}

class Options {

	string prefix[notempty; identifier];
	string package[qualified] = "";
	string positions [set:line,column,offset] = "line,offset";
	string endpositions [set:line,column,offset] = "";

	bool breaks = true;
	bool gentree = false;

	int maxtoken = 2048;
	int stack = 2048;

	bool packLexems = false;
	bool packTables = false;
}
