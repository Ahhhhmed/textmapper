<idea-plugin version="2">
	<id>org.textway.lapg.idea</id>
	<name>Lapg support</name>
	<category>Custom Languages</category>
	<version>1.3.11</version>
	<vendor url="http://textway.org/" email="egryaznov@gmail.com">Evgeny Gryaznov</vendor>
	<idea-version since-build="103.72"/>

	<description><![CDATA[
	<html>
		<h3>Lapg support for IntelliJ 11</h3>
		<br>
		<b>Features:</b><br>
		<ul>
		<li>Syntax highlighting</li>
		<li>Navigation (go to declaration)</li>
		</ul>
	</html>
	]]></description>

	<application-components>
		<component>
			<implementation-class>org.textway.lapg.idea.LapgLoader</implementation-class>
		</component>
	</application-components>

	<project-components>
		<component>
			<implementation-class>org.textway.lapg.idea.compiler.LapgCompilerProjectComponent</implementation-class>
		</component>
	</project-components>

	<actions>
		<action id="org.textway.lapg.idea.actions.NewLapgGrammar" class="org.textway.lapg.idea.actions.NewLapgGrammar"
				text="Lapg Grammar" description="Creates new Lapg Grammar">
			<add-to-group group-id="NewGroup" anchor="last"/>
		</action>
	</actions>

	<extensions defaultExtensionNs="com.intellij">
		<facetType implementation="org.textway.lapg.idea.facet.LapgFacetType"/>
		<frameworkSupport implementation="org.textway.lapg.idea.facet.LapgFacetTypeFrameworkSupportProvider"/>
		<fileTypeFactory implementation="org.textway.lapg.idea.file.LapgFileTypeFactory"/>
		<fileTemplateGroup implementation="org.textway.lapg.idea.actions.LapgTemplatesFactory"/>

		<syntaxHighlighter
				key="Lapg Syntax"
				implementationClass="org.textway.lapg.idea.highlighter.LapgSyntaxHighlighter"/>

		<lang.parserDefinition
				language="Lapg Syntax"
				implementationClass="org.textway.lapg.idea.parser.LapgParserDefinition"/>

		<lang.foldingBuilder
				language="Lapg Syntax"
				implementationClass="org.textway.lapg.idea.editor.LapgFoldingBuilder"/>

		<annotator
				language="Lapg Syntax"
				implementationClass="org.textway.lapg.idea.editor.LapgAnnotator"/>

		<defaultLiveTemplatesProvider
				implementation="org.textway.lapg.idea.templates.LapgDefaultLiveTemplatesProvider"/>

		<lang.commenter
				language="Lapg Syntax"
				implementationClass="org.textway.lapg.idea.editor.LapgCommenter"/>

		<!-- Lapg templates -->
		<syntaxHighlighter
				key="Lapg Templates"
				factoryClass="org.textway.lapg.idea.lang.templates.LtplSyntaxHighlighterProvider"/>

		<lang.parserDefinition
				language="Lapg Templates"
				implementationClass="org.textway.lapg.idea.lang.templates.parser.LtplParserDefinition"/>

	</extensions>
</idea-plugin>