<idea-plugin version="2">
	<id>org.textway.lapg.idea</id>
	<name>Lapg support</name>
	<category>Custom Languages</category>
	<version>0.9.0</version>
	<vendor url="http://github.com/inspirer/lapg/" email="egryaznov@gmail.com">Evgeny Gryaznov</vendor>
	<idea-version since-build="95.66"/>

	<description><![CDATA[
	<html>
		<h3>Lapg support for IntelliJ 9.0.2+</h3>
		<br>
		<b>Features:</b><br>
		<ul>
		<li>Syntax highlighting</li>
		<li>Navigation (go to declaration)</li>
		</ul>
	</html>
	]]></description>

	<application-components>
		<component>
			<implementation-class>org.textway.lapg.idea.LapgLoader</implementation-class>
		</component>
	</application-components>

	<project-components>
		<!-- Add your project components here -->
	</project-components>

	<actions>
		<!-- Add your actions here -->
	</actions>

	<extensions defaultExtensionNs="com.intellij">
		<fileTypeFactory implementation="org.textway.lapg.idea.file.LapgFileTypeFactory"/>

		<syntaxHighlighter
				key="Lapg Syntax"
				implementationClass="org.textway.lapg.idea.highlighter.LapgSyntaxHighlighter"/>

		<lang.parserDefinition
				language="Lapg Syntax"
				implementationClass="org.textway.lapg.idea.parser.LapgParserDefinition"/>

		<lang.foldingBuilder
				language="Lapg Syntax"
				implementationClass="org.textway.lapg.idea.editor.LapgFoldingBuilder"/>

		<annotator
				language="Lapg Syntax"
				implementationClass="org.textway.lapg.idea.editor.LapgAnnotator"/>

		<lang.commenter
				language="Lapg Syntax"
				implementationClass="org.textway.lapg.idea.editor.LapgCommenter"/>
	</extensions>
</idea-plugin>