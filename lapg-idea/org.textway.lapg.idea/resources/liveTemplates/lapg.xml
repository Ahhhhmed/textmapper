<?xml version="1.0" encoding="UTF-8"?>
<templateSet group="lapg">
	<template name="identifier"
			  resource-bundle="org.textway.lapg.idea.LapgBundle" key="livetemplate.id.description"
			  value="identifier(String):  /[a-zA-Z_][a-zA-Z_0-9]*/    (class)&#10;                        &#9;&#9;&#9;   { $lexem = current(); break; }"
			  toReformat="true" toShortenFQNames="true">
		<context>
			<option name="OTHER" value="true"/>
		</context>
	</template>
	<template name="sliteral"
			  resource-bundle="org.textway.lapg.idea.LapgBundle" key="livetemplate.scon.description"
			  value="scon(String):&#9;/&quot;([^\n\\&quot;]|\\.)*&quot;/&#9;&#9;  { $lexem = unescape(current(), 1, token.length()-1); break; }&#10;"
			  toReformat="true" toShortenFQNames="true">
		<context>
			<option name="OTHER" value="true"/>
		</context>
	</template>
	<template name="rule" value="$NONTERM$ ::=&#10;    $END$&#10;;"
			  resource-bundle="org.textway.lapg.idea.LapgBundle" key="livetemplate.rule.description"
			  toReformat="true" toShortenFQNames="true">
		<variable name="NONTERM" expression="&quot;nonterm&quot;" defaultValue="nonterm" alwaysStopAt="true"/>
		<context>
			<option name="OTHER" value="true"/>
		</context>
	</template>
</templateSet>

